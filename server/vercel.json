{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/stripe",
      "dest": "server.js",
      "methods": ["POST"],
      "headers": { "content-type": "application/json" },
      "bodyParser": false
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
}
